{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "jsx": "react",
        "outDir": "dist"
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "exclude": [
        "**/node_modules",
        "**/dist"
    ]
}
